[core]
	editor = nvim
	excludesfile = ~/.gitignore
	compression = 0
	pager = delta
	preloadIndex = true
[merge]
	tool = nvim
[mergetool]
	prompt = true
[mergetool "nvim"]
	cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[mergetool "nvimdiff"]
	cmd = nvim -d $LOCAL $BASE $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[user]
	name = Weihang Lo
	email = me@weihanglo.tw
	signingkey = D7DBF189825E82E7
[color]
	ui = true
	diff = true
	status = true
	interactive = true
[diff]
	tool = nvim
	colorMoved = default
	renames = copies
[difftool]
	prompt = true
[difftool "nvim"]
	cmd = nvim -d $LOCAL $REMOTE
[commit]
	gpgsign = true
[alias]
	br = branch -vv
	ci = commit -v
	co = checkout
	cp = cherry-pick
	lg = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)'
	pl = pull
	rb = rebase -i
	sm = submodule
	ss = stash
	st = status -sb
	sw = switch
	wt = worktree
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
[pull]
	ff = only
[delta]
	line-numbers = true
[init]
	defaultBranch = main
[log]
	follow = true
