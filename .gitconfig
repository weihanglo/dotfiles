[core]
	editor = vim
	excludesfile = ~/.gitignore
	compression = 0
[merge]
	tool = vimdiff
	path = nvim
[user]
	name = weihang
	email = weihanglo@protonmail.com
[color]
	ui = true
	diff = always
	status = always
	interactive = always
[difftool]
	prompt = false
[diff]
	tool = vimdiff
[alias]
	lg = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)'
	lgg = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)'
	lggg = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset) %C(bold cyan)(committed: %cD)%C(reset) %C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset)%n''          %C(dim white)- %an <%ae> %C(reset) %C(dim white)(committer: %cn <%ce>)%C(reset)'
	co = checkout
	ci = commit
	st = status
	br = branch
[gui]
	fontui = -family \"Inconsolata for Powerline\" -size 22 -weight normal -slant roman -underline 0 -overstrike 0
	fontdiff = -family \"Inconsolata for Powerline\" -size 18 -weight normal -slant roman -underline 0 -overstrike 0
