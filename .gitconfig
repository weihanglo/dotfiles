[alias]
	br = branch -vv
	ci = commit -v
	co = checkout
	cp = cherry-pick
	lg = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)'
	pl = pull
	rb = rebase -i
	sm = submodule
	ss = stash
	st = status -sb
	sw = switch
	wt = worktree
[color]
	diff = true
	interactive = true
	status = true
	ui = true
[commit]
	gpgsign = true
[core]
	compression = 0
	editor = nvim
	excludesfile = ~/.gitignore
	pager = delta
	preloadIndex = true
[delta]
	hyperlinks = true
	line-numbers = true
	syntax-theme = gruvbox-light
[diff]
	colorMoved = default
	renames = copies
	tool = difftastic
[difftool]
	prompt = false
[difftool "difftastic"]
	cmd = difft "$LOCAL" "$REMOTE"
[filter "lfs"]
	clean = git-lfs clean -- %f
	process = git-lfs filter-process
	required = true
	smudge = git-lfs smudge -- %f
[init]
	defaultBranch = main
[log]
	follow = true
	date = iso8601-strict
[merge]
	tool = nvim
[mergetool]
	prompt = true
[mergetool "nvim"]
	cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[mergetool "nvimdiff"]
	cmd = nvim -d $LOCAL $BASE $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[pager]
	difftool = true
[pull]
	ff = only
[rebase]
	updateRefs = true
