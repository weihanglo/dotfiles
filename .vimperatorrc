set hlsearch
set ignorecase
set smartcase

" maximum auto completion
set maxitems=8

" animations!!
set animations

" activate spell-check textarea/input
set! layout.spellcheckDefault=2

" do not close windows with last tab
set! browser.tabs.closeWindowWithLastTab=false

" Make Firefox run faster by using JIT
set! javascript.options.jit.chrome=true

" colorscheme and gui
colorscheme solarized_dark
set gui=none,tabs
set noscrollbars
hi Normal -append font-size:18px

" for move happily
nnoremap j 5j
nnoremap k 10k
nnoremap h gT
nnoremap l gt

" enter/close Reader View
nnoremap gr :emenu View.Enter Reader View<CR>
nnoremap gR :emenu View.Close Reader View<CR>

" search and hint
set hlsearch
set hintchars=0123456789hjklasdfgyuiopqwertnmzxcvb
set complete=sl

" quick marks
qmark f https://feedly.com
qmark g https://github.com
qmark p https://protonmail.com
qmark b https://bitbucket.org
qmark j https://jira-rd.hyweb.com.tw
qmark w cwb.gov.tw
